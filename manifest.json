{
  "manifest_version": 3,
  "name": "X Timeline Curator",
  "version": "1.0.0",
  "description": "AI-powered Chrome extension for curating your X/Twitter timeline using local transformers.js. 100% privacy-focused.",
  "permissions": [
    "storage",
    "scripting",
    "alarms",
    "offscreen",
    "downloads"
  ],
  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*",
    "https://huggingface.co/*",
    "https://cdn.jsdelivr.net/*",
    "https://cdn-lfs.huggingface.co/*",
    "https://cdn-lfs-us-1.huggingface.co/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none';"
  },
  "content_scripts": [
    {
      "matches": [
        "*://x.com/*",
        "*://twitter.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    { 
      "resources": ["vendor/*"], 
      "matches": ["<all_urls>"] 
    }
  ]
}